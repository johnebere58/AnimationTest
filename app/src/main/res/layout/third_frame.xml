<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/black_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/shadow"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/white_back"
        />


    <View
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tx"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/curve_black"
        android:alpha=".2"
        android:id="@+id/t1b"
        />
    <View
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/text_back2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:background="@drawable/curve_black"
        android:alpha=".2"
        android:id="@+id/tx"
        />



    <View
        app:layout_constraintLeft_toLeftOf="@id/tx"
        app:layout_constraintRight_toLeftOf="@id/text_back2"
        app:layout_constraintBottom_toTopOf="@id/wallet_bal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_green"
        android:id="@+id/text_back1"
        android:layout_marginBottom="50dp"
        />

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toRightOf="@id/text_back1"
        app:layout_constraintRight_toLeftOf="@id/text_back3"
        app:layout_constraintBottom_toTopOf="@id/wallet_bal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_black"
        android:alpha=".3"
        android:id="@+id/text_back2"
        android:layout_marginBottom="50dp"
        />

    <View
        app:layout_constraintLeft_toRightOf="@id/text_back2"
        app:layout_constraintRight_toRightOf="@id/tx"
        app:layout_constraintBottom_toTopOf="@id/wallet_bal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_black"
        android:alpha=".3"
        android:id="@+id/text_back3"
        android:layout_marginBottom="50dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/text1"
        app:layout_constraintLeft_toLeftOf="@id/text_back1"
        app:layout_constraintTop_toTopOf="@id/text_back1"
        app:layout_constraintBottom_toBottomOf="@id/text_back1"
        app:layout_constraintRight_toRightOf="@id/text_back1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/text2"
        app:layout_constraintLeft_toLeftOf="@id/text_back2"
        app:layout_constraintTop_toTopOf="@id/text_back2"
        app:layout_constraintBottom_toBottomOf="@id/text_back2"
        app:layout_constraintRight_toRightOf="@id/text_back2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/text3"
        app:layout_constraintLeft_toLeftOf="@id/text_back3"
        app:layout_constraintTop_toTopOf="@id/text_back3"
        app:layout_constraintBottom_toBottomOf="@id/text_back3"
        app:layout_constraintRight_toRightOf="@id/text_back3"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/wallet_bal"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/next_button_third_frame"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Balance:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:alpha=".5"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:background="@color/black"
            android:alpha=".3"
            />
        <View
            android:layout_width="50dp"
            android:layout_height="15dp"
            />
        <View
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@color/black"
            android:alpha=".3"
            />
        <View
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/black"
            android:alpha=".3"
            />

    </LinearLayout>


    <FrameLayout
        android:background="@drawable/curve_green"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:transitionName="button"
        android:id="@+id/next_button_third_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>